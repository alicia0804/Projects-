import random

def roll():
    min_value = 1
    max_value = 6
    return random.randint(min_value, max_value)

# Ask for number of players
while True:
    players = input("Enter the number of players (2-4): ")
    if players.isdigit():
        players = int(players)
        if 2 <= players <= 4:
            break
        else:
            print("Must be between 2-4 players. Try again.")
    else:
        print("Invalid, try again please")

max_score = 50
players_scores = [0 for _ in range(players)]

# Main game loop
while max(players_scores) < max_score:
    for player_idx in range(players):
        print("\nPlayer number", player_idx + 1, "turn has just started!\n")
        current_score = 0

        while True:
            should_roll = input("Would you like to roll (y)? ")
            if should_roll.lower() != "y":
                break

            value = roll()
            if value == 1:
                print("You rolled a 1! Turn done! No points added.")
                current_score = 0
                break
            else:
                current_score += value
                print("You rolled a:", value)

            print("Your score this turn is:", current_score)

        players_scores[player_idx] += current_score
        print("Your total score is:", players_scores[player_idx])

        if players_scores[player_idx] >= max_score:
            print("\nPlayer", player_idx + 1, "wins with", players_scores[player_idx], "points!")
            break
    else:
        continue  # continue if no one has won yet
    break  # break outer loop if someone wins


